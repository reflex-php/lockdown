{
    "name": "reflex/lockdown",
    "description": "PHP 5.4 ACL system",
    "keywords": ["auth", "laravel", "acl"],
    "authors": [
        {
            "name": "Mike Shellard",
            "email": "me@aziri.us",
            "role": "Head Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "dev-master",
        "illuminate/cookie": "dev-master",
        "illuminate/cache": "dev-master",
        "illuminate/database": "dev-master",
        "illuminate/http": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit":  "~4.0",
        "mockery/mockery":  "~0.9"
    },
    "autoload": {
        "classmap": [
            "src/migrations"
        ],
        "psr-4":    {
            "Reflex\\Lockdown\\": "src/"
        },
        "files":    [
            "src/helpers.php",
            "src/exceptions.php"
        ]
    },
    "minimum-stability": "dev"
}
